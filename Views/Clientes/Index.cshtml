@model List<Clientes>
@{
    ViewData["Title"] = "Clientes";
}

<style>
    .custom-bg {
        background-color: #009688;
    }
</style>

<div class="container-fluid text-center">
    <br />
    <h1 class="fs-2">Listagem de Clientes</h1>
    <br />

    <table class="table" id="table-clientes">
        <thead class="custom-bg">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">CPF</th>
                <th scope="col">Telefone</th>
                <th scope="col">Endereço</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clientes in Model)
            {
                <tr>
                    <td class="table-light">@clientes.Nome</td>
                    <td class="table-light">@clientes.Email</td>
                    <td class="table-light">@clientes.Cpf</td>
                    <td class="table-light">@clientes.Telefone</td>
                    <td class="table-light">@clientes.Endereco</td>
                    <td class="table-light">
                        <a class="btn btn-primary" asp-controller="Clientes" asp-action="Edit" asp-route-id="@clientes.Id">Editar</a>
                        <a class="btn btn-danger" asp-controller="Clientes" asp-action="Delete" asp-route-id="@clientes.Id" onclick="return confirm('Você tem certeza que deseja excluir este cliente?')">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </br>
    </br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" asp-controller="Clientes" asp-action="Create">Cadatrar Novo Cliente</a>
    </div>
</div>