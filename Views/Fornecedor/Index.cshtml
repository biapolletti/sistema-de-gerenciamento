@model List<Fornecedor>
@{
    ViewData["Title"] = "Fornecedores";
}

<style>
    .custom-bg {
        background-color: #009688;
    }
</style>

<div class="text-center">
    <br />
    <h1 class="fs-2">Listagem de Fornecedores</h1>
    <br />

    <table class="table" id="table-fornecedor">
        <thead class="custom-bg">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">CPF/CNPJ</th>
                <th scope="col">Telefone</th>
                <th scope="col">Endereço</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fornecedor in Model)
            {
                <tr>
                    <td class="table-light">@fornecedor.Nome</td>
                    <td class="table-light">@fornecedor.Email</td>
                    <td class="table-light">@fornecedor.Cpf</td>
                    <td class="table-light">@fornecedor.Telefone</td>
                    <td class="table-light">@fornecedor.Endereco</td>
                    <td class="table-light">
                        <a class="btn btn-primary" asp-controller="Fornecedor" asp-action="Edit" asp-route-id="@fornecedor.Id">Editar</a>
                        <a class="btn btn-danger" asp-controller="Fornecedor" asp-action="Delete" asp-route-id="@fornecedor.Id" onclick="return confirm('Você tem certeza que deseja excluir este fornecedor?')">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </br>
    </br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" asp-controller="Fornecedor" asp-action="Create">Cadatrar Novo Fornecedor</a>
    </div>
</div>