@model List<Produtos>
@{
    ViewData["Title"] = "Produtos";
}

<style>
    .custom-bg {
        background-color: #009688;
    }
</style>

<div class="text-center">
    <br />
    <h1 class="fs-2">Listagem de Produtos</h1>
    <br />

    <table class="table" id="table-produtos">
        <thead class="custom-bg">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Data de Validade</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produtos in Model)
            {
                <tr>
                    <td class="table-light">@produtos.Nome</td>
                    <td class="table-light">@produtos.Tipo</td>
                    <td class="table-light">@produtos.Quantidade</td>
                    <td class="table-light">R$@(produtos.ValorUni)</td>
                    <td class="table-light">@produtos.DataVal</td>
                    <td class="table-light">
                        <a class="btn btn-primary" asp-controller="Produtos" asp-action="Edit" asp-route-id="@produtos.Id">Editar</a>
                        <a class="btn btn-danger" asp-controller="Produtos" asp-action="Delete" asp-route-id="@produtos.Id" onclick="return confirm('Você tem certeza que deseja excluir este produto?')">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </br>
    </br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" asp-controller="Produtos" asp-action="Create">Cadatrar Novo Produto</a>
    </div>
</div>