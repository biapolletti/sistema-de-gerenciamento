<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrbanFarm</title>
    <link rel="icon" type="image/x-icon" href="/icon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_version.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.css" rel="stylesheet">
    <style>
        .custom-bg {
            background-color: #009688;
        }
    </style>
</head>
<body>
    <header>
            <nav class="custom-bg navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand ms-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/img/icon.png" width="40" height="40">
                    </a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Fornecedor" asp-action="Index">Fornecedores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Insumos" asp-action="Index">Insumos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="WeatherApi" asp-action="Index">Cultivo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Ofertas" asp-action="Index">Ofertas</a>
                            </li>
                        </ul>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="LogOut">Sair</a>
                                </li>
                            </ul>
                        }
                        <!--<div class="d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link" role="button">
                                        <i class="fas fa-user text-white"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>-->
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - UrbanFarm - <a asp-area="" asp-controller="Início" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

